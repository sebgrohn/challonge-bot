{
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "extends": ["airbnb/base"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": "off",
        "max-len": "off",
        "no-plusplus": ["warn", { "allowForLoopAfterthoughts": true }]
    },
    "plugins": ["jest"]
}
